<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_stadium">

    <!-- ðŸ Score Info -->
    <TextView
        android:id="@+id/tvScoreBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Runs: 0/0\nOver: 0.1\nTarget: 00"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <!-- ðŸŽ² Dice B FIRST -->

    <!-- ðŸ·ï¸ Team B Label AFTER Dice -->

    <!-- ðŸ·ï¸ Team A Label FIRST -->

    <ImageView
        android:id="@+id/diceB"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="134dp"
        android:src="@drawable/dice1" />

    <TextView
        android:id="@+id/tvTeamB"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/diceB"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="-162dp"
        android:layout_toStartOf="@id/diceB"
        android:background="@drawable/team_label"
        android:gravity="center"
        android:text="TEAM B"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvTeamA"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/team_label"
        android:gravity="center"
        android:text="TEAM A"
        android:textColor="#FFFFFF" />

    <!-- ðŸŽ² Dice A AFTER Label -->

    <!-- ðŸŽ² Large Dice Result Number -->

    <ImageView
        android:id="@+id/diceA"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/tvTeamA"
        android:layout_marginStart="14dp"
        android:layout_marginTop="-14dp"
        android:layout_toEndOf="@id/tvTeamA"
        android:src="@drawable/dice1" />

    <TextView
        android:id="@+id/tvDiceResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="#00BFFF"
        android:textSize="100sp"
        android:textStyle="bold"
        android:layout_centerInParent="true" />

    <!-- âŒ OUT! TextView -->
    <TextView
        android:id="@+id/tvOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OUT!"
        android:textColor="#FF0000"
        android:textSize="50sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

    <!-- âš« Dot Ball Button -->
    <Button
        android:id="@+id/btnDot"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="â€¢"
        android:textSize="22sp"
        android:backgroundTint="#9E9E9E"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"/>

    <!-- ðŸ”˜ Six Ball Buttons Row -->
    <LinearLayout
        android:id="@+id/ballRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/ball1"
            style="@style/BallButton"
            android:text="1" />
        <Button
            android:id="@+id/ball2"
            style="@style/BallButton"
            android:text="2" />
        <Button
            android:id="@+id/ball3"
            style="@style/BallButton"
            android:text="3" />
        <Button
            android:id="@+id/ball4"
            style="@style/BallButton"
            android:text="4" />
        <Button
            android:id="@+id/ball5"
            style="@style/BallButton"
            android:text="5" />
        <Button
            android:id="@+id/ball6"
            style="@style/BallButton"
            android:text="6" />
    </LinearLayout>



</RelativeLayout>





